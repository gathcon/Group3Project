<persistence>
	<persistence-unit name="project" transaction-type="RESOURCE_LOCAL">
		<class>model.Base_Data</class>
		<class>model.Event_Cause</class>
		<class>model.Event_CausePK</class>
		<class>model.Failure</class>
		<class>model.Operator</class>
		<class>model.OperatorPK</class>
		<class>model.User_Equipment</class>
		<properties>
			<property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/project" />
            <property name="hibernate.connection.username" value="root" />
 			<property name="hibernate.connection.password" value="toor" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
